import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Bank Sparkasse = new Bank();
		Kunde horst = new Kunde("Gerd", 1234);
		Kunde herbert = new Kunde("herbert", 5432);
		Kunde thorsten = new Kunde("grud", 9876);
		// Konten
		horst.addKonto(123456, 500.0, 0);
		horst.addKonto(23456, 700.0, 0);

		herbert.addKonto(65432, 600, 40);
		thorsten.addKonto(78910, 900, 60000);

		Sparkasse.neueKunden(horst);
		Sparkasse.neueKunden(herbert);
		Sparkasse.neueKunden(thorsten);
		// Ende
		Scanner s = new Scanner(System.in);
		boolean logged = false;
		while (logged == false) {
			System.out.print("Deine Kundenid: ");
			int kundenid = s.nextInt();
			System.out.println("Deine pinnummer: ");
			int pin_nummer = s.nextInt();
			Kunde checkData = Sparkasse.getKunde(kundenid, pin_nummer);
			if (checkData != null) {
				System.out.println("Wilkommen!...");
				checkData.getKontodaten();
				System.out.println("Mit welchem Konto wollen sie Arbeiten: ");
				int kontonummer = s.nextInt();
				Konto konto = checkData.getKonto(kontonummer);
				System.out.println("Wie viel wollen sie auszahlen: ");
				int betrag = s.nextInt();
				konto.auszahlen(betrag);
				checkData.getKontodaten();
				System.out.println("Von welchem Konto ueberweisen ?: ");
				kontonummer = s.nextInt();
				konto = checkData.getKonto(kontonummer);
				System.out.println("Zu welchem Konto ueberweisen ?: ");
				int kontonummer2 = s.nextInt();
				System.out.println("Wie viel ueberweisen ?: ");
				betrag = s.nextInt();
				Sparkasse.ueberweisen(kontonummer2, betrag);
				konto.auszahlen(betrag);
				System.out.println("Erfolg!\n");
				checkData.getKontodaten();
				break;
			} else {
				System.out.println("Falsche eingabe!");
				continue;
			}
		}
		s.close();
	}
}
